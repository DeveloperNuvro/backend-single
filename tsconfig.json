
{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": ".",
      "baseUrl": ".",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "types": ["jest", "node"],
       "paths": {
        "@src/*": ["src/*"]               
      }
    },
    "include": ["src/**/*.ts", "jest.config.ts", "scripts/**/*.ts"], 
    "exclude": ["node_modules"] 
  }
  
  
